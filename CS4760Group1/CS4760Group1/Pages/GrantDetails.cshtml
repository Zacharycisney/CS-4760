@page "{id:int}"
@model CS4760Group1.Pages.GrantDetailsModel
@{
    ViewData["Title"] = "Grant Details";
}

<head>
    <link rel="stylesheet" href="~/css/GrantReview.css">
</head>

<h1>Grant Details for: @Model.Grant.Title</h1>

<table class="table">
    <tr>
        <th>Title:</th>
        <td>@Model.Grant.Title</td>
    </tr>
    <tr>
        <th>Principal Investigator (PI):</th>
        <td>@Model.Grant.PI</td>
    </tr>
    <tr>
        <th>Description:</th>
        <td>@Model.Grant.Description</td>
    </tr>
    <tr>
        <th>Type:</th>
        <td>@Model.Grant.Type</td>
    </tr>
    <tr>
        <th>Subtype:</th>
        <td>@Model.Grant.SubType</td>
    </tr>
    <tr>
        <th>Season:</th>
        <td>@Model.Grant.Season</td>
    </tr>
    <tr>
        <th>Amount from @Model.Grant.Type:</th>
        <td>@Model.Grant.Amount</td>
    </tr>
    <tr>
        <th>Amount from Other:</th>
        <td>@Model.Grant.AmountFromOther</td>
    </tr>
    <tr>
        <th>Total Amount:</th>
        <td>@Model.Grant.TotalAmount</td>
    </tr>
    <tr>
        <th>Status:</th>
        <td>@Model.Grant.Status</td>
    </tr>
</table>

<div class="grant-review-grading">

    <div class="form-group">
        <label class="control-label">A1:</label>
        <select class="form-control">
            <option>0</option>
            <option>0.5</option>
            <option>1</option>
            <option>1.5</option>
            <option>2</option>
        </select>
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">A2:</label>
        <select class="form-control">
            <option>0</option>
            <option>0.5</option>
            <option>1</option>
            <option>1.5</option>
            <option>2</option>
        </select>
        <span class="text-danger"></span>
    </div>

    <input value="Calculate" class="btn btn-primary" />
</div>

<div class="form-group">
    <input type="submit" value="Submit" class="btn btn-primary" />
</div>

<a asp-page="./GrantReview">Back to Grant Review</a>
