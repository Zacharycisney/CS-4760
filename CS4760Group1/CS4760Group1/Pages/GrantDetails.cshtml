            <option>0</option>
            <option>0.5</option>
            <option>1</option>
            <option>1.5</option>
            <option>2</option>
        </select>
        <span class="text-danger"></span>
    </div>

    <!-- Area two (choose one)-->
        <!-- University or program reputation -->
        <!-- Innovative teaching -->
        <!-- Community educational engagement -->
    <div class="form-group">
        <label id="A2" class="control-label">A2:</label> <!-- Weight 5 -->
        <select class="form-control">
            <option>0</option>
            <option>0.5</option>
            <option>1</option>
            <option>1.5</option>
            <option>2</option>
        </select>
        <span class="text-danger"></span>
    </div>

    <!-- Area three (do all) -->
        <!-- Proc and Methods   Weight 1 -->
        <!-- Timeline and budget description    Weight 1 -->
        <!-- Evaluation and dissemination   Weight 3 -->
        <!--  Evidential documentation  weight 1 -->

    <input value="Calculate" class="btn btn-primary" />
</div>

<div class="form-group">
    <input type="submit" value="Submit" class="btn btn-primary" />
</div>

<a asp-page="./GrantReview">Back to Grant Review</a>

